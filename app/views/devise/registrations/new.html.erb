<%= render "devise/shared/error_messages", resource: resource %>
<section class="devise_form_layout">
  <div class="devise_f_position">
    <div class="f_top">
      <h2>新しいアカウントを作成</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="devise_f_row">
          <div class="f_row_left">
          </div>
          <div class="field">
            <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "ユーザー名" %>
          </div>
        </div>
        <div class="devise_f_row">
          <div class="f_row_left">
          </div>
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"  %>
          </div>
        </div>
        <div class="devise_f_row">
          <div class="f_row_left">
          </div>
          <div class="field">
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード"  %>
          </div>
        </div>
        <div class="devise_f_row">
          <div class="f_row_left">
          </div>
          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認"  %>
          </div>
        </div>
        <div class="actions center_f">
          <%= f.submit "新しいアカウントを作成", class: 'f_action-btn is-success' %>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</section>
