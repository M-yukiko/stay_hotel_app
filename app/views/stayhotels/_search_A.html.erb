<%= form_tag(stayhotels_path, method: :get, local: true) do %>
  <div class="search_box">
      <div class="s_form_outer">
        <%= icon('fa', 'map-marker', class: 's_icon') %>
        <%= text_field_tag :area, '', placeholder: 'エリア', class: "s_form_inner" %>
      </div>
      <div class="s_form_outer">
        <%= fa_icon("search", class: "s_icon") %>
        <%= text_field_tag :search, '', placeholder: 'キーワード', class: "s_form_inner" %>
      </div>
      <%= submit_tag '検索' %>
  </div>
<% end %>
