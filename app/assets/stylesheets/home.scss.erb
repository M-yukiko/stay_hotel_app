.main_frame {
	display: block;
	width: 100%;
	height: auto;
	background-size:cover;
}

.main_top {
	display: flex;
	align-items: center;
	width:100%;
	height: 650px;
	background-size:cover;
	background-image: url("<%= asset_path('img_cover_top.jpeg') %>")
}

.search_form {
	display: flex;
	padding: 25px;
	align-items: center;
	color: red;
	background-color: #fff;
	margin:50px 0px 50px 100px;
}

.main_bottom {
	width:100%;
	display: flex;
}

.navbox {
	display: flex;
	margin:auto;
	padding-top: 20px;
	padding-bottom: 20px;
}

.region_img {
	display: block;
	position: relative;
	margin: 10px;
	align-items: center;
}

.r_img {
	width: 186px;
	height: 360px;
	object-fit: cover;
	border-radius: 5px;
}

.region_img  > span {
	width:100%;
	margin:auto;
	position:absolute;
	left: 0;
	bottom:30px;
	z-index: 1;
	text-align: center;
	font-size: 24px;
	color: #fff;
	font-weight: bold;
}

/*検索用*/

.f_form, .search_form {
  width: 470px;
  height: 270px;
  padding: 24px;
  border-radius: 5px;
  font-size:12px;
  color:#333;
}

.f_form > p {
	font-size: 28px;
 	color: #000;
 	line-height: 33px;
	letter-spacing: 1px;
	margin-bottom: 20px;
}

.s_form_inner2 {
	display: block;
	width: 100%;
	height: calc(1.5em + 0.75rem + 2px);
	padding: 0.375rem 0.75rem;
	font-size: 1rem;
	font-weight: 400;
	line-height: 1.5;
	color: #495057;
	background-color: #fff;
	background-clip: padding-box;
	border: 1px solid #ced4da;
	border-radius: 0.25rem;
	transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
}
